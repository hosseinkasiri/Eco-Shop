<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_home"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.example.ecoshop.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_detailFragment"
            app:destination="@id/detail" />
        <action
            android:id="@+id/action_home_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/detail"
        android:name="com.example.ecoshop.detail.DetailFragment"
        android:label="DetailFragment" >
        <action
            android:id="@+id/action_detail_self"
            app:destination="@id/detail" />
        <argument
            android:name="product"
            app:argType="com.example.ecoshop.model.Product" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.ecoshop.search.SearchFragment"
        android:label="SearchFragment" />
</navigation>
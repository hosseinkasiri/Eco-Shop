<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="product"
            type="com.example.ecoshop.model.Product" />

        <variable
            name="onClickListener"
            type="com.example.ecoshop.utils.ListItemClickListener" />
    </data>

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="250dp"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#EFECEC" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            app:cardCornerRadius="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="@{() -> onClickListener.onClick(product)}">

                <ImageView
                    android:id="@+id/imageItem"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="3dp"
                    imageUrl="@{product.images.get(0).src}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/nameItem"
                    setTextTextView="@{product.name}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:textStyle="bold|italic"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageItem"
                    tools:text="گوشی مبایل سامسونگ مدل A21" />

                <TextView
                    android:id="@+id/priceItem"
                    priceProduct="@{product.price}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nameItem"
                    app:layout_constraintBottom_toTopOf="@+id/relative"
                    tools:text="تومان4,845,000" />

                <RelativeLayout
                    android:id="@+id/relative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"
                    android:layout_marginBottom="8dp"
                    regularPriceVisibility="@{product.onSale}"
                    app:layout_constraintEnd_toEndOf="@+id/priceItem"
                    app:layout_constraintStart_toStartOf="@+id/priceItem"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/priceItem">

                    <TextView
                        android:id="@+id/regularPriceItem"
                        priceProduct="@{product.regularPrice}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textColor="@color/regularPriceColor"
                        android:textSize="12sp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        tools:text="5,000,000" />

                    <View
                        android:layout_width="60dp"
                        android:layout_height="1dp"
                        android:background="@color/regularPriceColor"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="shoppingItem"
            type="com.example.ecoshop.model.ShoppingItem" />
        <variable
            name="clickListener"
            type="com.example.ecoshop.utils.ListItemClickListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="4dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:padding="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_shopping"
                    setTextTextView="@{shoppingItem.product.name}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="end"
                    tools:text="گوشی مبایل اپل مدل iphone 12 A2404 دو سیم کارت ظرفیت ۱۲۸ گیگابایت" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/price"
                        priceProduct="@{shoppingItem.product.price}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginBottom="24dp"
                        app:layout_constraintBottom_toTopOf="@+id/trash_button"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="5,000,000 تومان" />

                    <RelativeLayout
                        android:id="@+id/pathRelative"
                        regularPriceVisibility="@{shoppingItem.product.onSale}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@+id/price"
                        app:layout_constraintTop_toTopOf="@+id/price"
                        app:layout_constraintBottom_toBottomOf="@+id/price"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/regularPriceDetail"
                            priceProduct="@{shoppingItem.product.regularPrice}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/regularPriceColor"
                            tools:text="5,500,000" />

                        <View
                            android:layout_width="100dp"
                            android:layout_height="1dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@color/regularPriceColor" />
                    </RelativeLayout>

                    <ImageButton
                        android:id="@+id/trash_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@color/white"
                        android:onClick="@{() -> clickListener.onClick(shoppingItem.product)}"
                        android:src="@drawable/ic_action_trash"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/countText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        setTextTextView="@{String.valueOf(shoppingItem.count)}"
                        android:textColor="#F36F6F"
                        app:layout_constraintBottom_toBottomOf="@+id/trash_button"
                        app:layout_constraintStart_toEndOf="@+id/trash_button"
                        app:layout_constraintTop_toTopOf="@+id/trash_button"
                        tools:text="5" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/image_shopping"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_marginEnd="8dp"
                android:layout_gravity="end"
                imageUrl="@{shoppingItem.product.images.get(0).src}"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
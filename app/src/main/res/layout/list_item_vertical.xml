<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="product"
            type="com.example.ecoshop.model.Product" />

        <variable
            name="onClickListener"
            type="com.example.ecoshop.utils.ListItemClickListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="4dp"
        app:cardCornerRadius="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="@{() -> onClickListener.onClick(product)}">

            <ImageView
                android:id="@+id/imageVertical"
                imageUrl="@{product.images.get(0).src}"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/nameVertical"
                setTextTextView="@{product.name}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textStyle="bold|italic"
                app:layout_constraintEnd_toStartOf="@+id/imageVertical"
                app:layout_constraintTop_toTopOf="@+id/imageVertical"
                tools:text="سلمسونگ گلکسی A51" />

            <TextView
                android:id="@+id/priceVertical"
                priceProduct="@{product.regularPrice}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageVertical"
                app:layout_constraintEnd_toEndOf="@+id/nameVertical"
                app:layout_constraintTop_toBottomOf="@+id/nameVertical"
                tools:text="5,000,000" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
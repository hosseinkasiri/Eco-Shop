<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="product"
            type="com.example.ecoshop.Product" />

        <variable
            name="onClickListener"
            type="com.example.ecoshop.home.ListItemClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageVertical"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            imageUrl="@{product.images.get(0).src}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            nameProduct="@{product.name}"
            app:layout_constraintStart_toEndOf="@+id/imageVertical"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="سلمسونگ گلکسی A51" />

        <TextView
            android:id="@+id/priceVertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            regularPriceProduct="@{product.regularPrice}"
            app:layout_constraintStart_toStartOf="@+id/nameVertical"
            app:layout_constraintTop_toBottomOf="@+id/nameVertical"
            tools:text="5,000,000" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>